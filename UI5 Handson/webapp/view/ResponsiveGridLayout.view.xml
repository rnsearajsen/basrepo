<mvc:XMLView controllerName="ux400.training.ux400handson.controller.ResponsiveGridLayout" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" displayBlock="true">
    <Panel expandable="true" expanded="false" headerText="{i18n>title_form}" >
        <f:SimpleForm layout="ResponsiveGridLayout">
            <f:title>
                <core:Title text="{i18n>title_RGlayout}" />
            </f:title>
            <f:content>
                <core:Title text="key of flight connection" />
                <Label text="Carrier">
                    <layoutData>
                        <l:GridData span="L2 M4 S12" />
                    </layoutData>
                </Label>
                <Input>
                    <layoutData>
                        <l:GridData span="L10 M8 S12" />
                    </layoutData>
                </Input>
                <Label text="Flight Number">
                    <layoutData>
                        <l:GridData span="L2 M4 S12" />
                    </layoutData>
                </Label>
                <Input>
                    <layoutData>
                        <l:GridData span="L10 M8 S12" />
                    </layoutData>
                </Input>
                <Button text="Submit">
                    <layoutData>
                        <l:GridData indent="M4" span="L2 M8 S12" />
                    </layoutData>
                </Button>
            </f:content>
        </f:SimpleForm>
        <Image src="../img/Flight_Image.jpg" width="50%" height="10%" class="sapUiHideOnPhone"></Image>
        <content />
    </Panel>
</mvc:XMLView>
